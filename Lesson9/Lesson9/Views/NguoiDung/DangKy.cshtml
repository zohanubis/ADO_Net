
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/LayoutView.cshtml";
}

<h2>Đăng Ký Thành Viên</h2>
<table class="table">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        {
            <tr>
                <td style="text-align:right">Họ Tên KH</td>
                <td>@Html.TextBox("HoTenKH", "", new { @class = "form-control" }) @ViewData["Loi1"]</td>
            </tr>
            <tr>
                <td style="text-align:right">Tên Đăng Nhập</td>
                <td>@Html.TextBox("TenDN", "", new { @class = "form-control" }) @ViewData["Loi2"]</td>
            </tr>
            <tr>
                <td style="text-align:right">Mật Khẩu</td>
                <td>@Html.TextBox("MatKhau", "", new { @class = "form-control" }) @ViewData["Loi3"]</td>
            </tr>
            <tr>
                <td style="text-align:right">Nhập Lại Mật Khẩu</td>
                <td>@Html.TextBox("ReMatKhau", "", new { @class = "form-control" }) @ViewData["Loi4"]</td>
            </tr>
            <tr>
                <td style="text-align:right">Điện Thoại</td>
                <td>@Html.TextBox("DienThoai", "", new { @class = "form-control" }) @ViewData["Loi5"]</td>
            </tr>
            <tr>
                <td style="text-align:right">Ngày Sinh</td>
                <td><input type="date" name="NgaySinh" width="400px" class="form-control" /></td>
            </tr>
            <tr>
                <td style="text-align:right">Email</td>
                <td><input type="email" name="email" width="400px" class="form-control" /></td>
            </tr>
            <tr>
                <td style="text-align:right">Địa Chỉ</td>
                <td><input type="text" name="DiaChi" width="400px" class="form-control" /></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit"  value="Đăng Ký" class="btn btn-primary" /></td>
            </tr>
        }
    }


</table>


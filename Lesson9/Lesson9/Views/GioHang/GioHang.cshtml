

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/LayoutView.cshtml";
}
@using Lesson9.Models;
@model List<GioHang>

<h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color:lightyellow">
            <th>MÃ SÁCH</th>
            <th>TÊN SÁCH</th>
            <th>ẢNH BÌA</th>
            <th>SỐ LƯỢNG</th>
